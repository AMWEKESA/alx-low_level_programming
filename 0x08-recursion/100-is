
#include "main.c"
#include <string.h>

/**
 * is_palindrome - check if string is palindrome  recursively
 * check_palindrome - check for palidrome
 * @s: string to be checked
 * @i: index on the left
 * @j: index on the right
 * Return: return 1 if true else 0
 */

int check  _palindrome(char *s; i; j);
int is_palindrome(char *s)
{
        int len = strlen(*s);
        if (len ==0 || len ==1 )
                return (1);
                return check_palindrome(s, 0, len -1);
}


int check_palindrome( char *s, int i, int j)
{
        if (i >= j)
                return (1);
        else if (s[i] ==s[j])
                return check_palindrome(s, i, j - 1);
        else
                return (0);
        
}
